{
  "$schema": "https://json.schemastore.org/package",
  "name": "@rustkas/svelte-headless",
  "version": "1.0.0",
  "author": "Anatoly Kosorukov",
  "license": "MIT",
  "type": "module",
  "description": "Modern and lightweight headless UI components for SvelteKit",
  "keywords": [
    "svelte",
    "sveltekit",
    "headless-ui",
    "components",
    "accessible",
    "a11y"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rustkas/svelte-headless.git"
  },
  "bugs": {
    "url": "https://github.com/rustkas/svelte-headless/issues"
  },
  "homepage": "https://github.com/rustkas/svelte-headless#readme",
  "scripts": {
    "generate": "tsx scripts/generate-components.ts",
    "build": "svelte-package",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "prepack": "svelte-package",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.8",
    "@tsconfig/svelte": "^5.0.4",
    "@types/node": "^22.15.21",
    "esm-env": "^1.2.2",
    "fs-extra": "^11.3.0",
    "jsdom": "^26.1.0",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "svelte-preprocess": "^6.0.3",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "vite": "^6.2.6",
    "vitest": "^3.2.1"
  }
}
